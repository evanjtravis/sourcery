#!/usr/bin/bash

echo -e "\t${USR}/bashrc"

umask 022

#####################################################################
# Environment Variables
#####################################################################
LS_COLORS='di=96:ln=35;100'
add_to_path ${HOME}/twee

export BASHINIT=${MYBASHLIB}/init
export PYINIT=${MYPYLIB}/init

add_to_path $BASHINIT
add_to_path /cygdrive/c/HashiCorp/Vagrant/bin
add_to_pythonpath $PYINIT

#====================================================================
# Git Aware Prompt
#--------------------------------------------------------------------
export GITAWAREPROMPT=${SOURCES}/utils/git-aware-prompt
source $GITAWAREPROMPT/main.sh
export PS1="\n\[$txtgrn\]\u\[$txtred\]@\[$txtgrn\]\h\n\$git_branch\[$txtred\]\$git_dirty\[$txtylw\]pwd: \w\n\[$txtrst\]\$ "
#====================================================================


#====================================================================
# X-Forwarding Automation
#   - Allow service user to access X-forwarding options.
#--------------------------------------------------------------------

if [ -e ~/.Xauthority ]; then
    chmod 644 ~/.Xauthority
fi

#--------------------------------------------------------------------
