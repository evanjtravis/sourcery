echo -e "\t${SOURCES}/all/bashrc"

#####################################################################
# Environment Variables
#####################################################################
export LS_COLORS='di=36'
export MYLIBS=${SETTINGS}/mylibs
export MYPYLIB=${MYLIBS}/pylib
export MYBASHLIB=${MYLIBS}/bashlib

export PYTHONSTARTUP=${MYPYLIB}/pythonstartup.py

export PATH=$PATH:${SETTINGS}:${MYBASHLIB}
export PYTHONPATH=$PYTHONPATH:${MYPYLIB}

export VIMRC=${MYHOME}/.vimrc
#####################################################################
# Aliases
#####################################################################

alias c="clear"
alias djtest="python manage.py test"
alias ls="ls --group-directories-first --color=auto"

######################################################################
# Additional Sources
######################################################################

if [ "$MYNAME" == "$USER" ]; then
    source ${SOURCES}/user/bashrc
    source ${SOURCES}/user/sourceryrc.bash
else
    source ${SOURCES}/service-user/bashrc
    source ${SOURCES}/service-user/sourceryrc.bash
fi

